<h1>Sign-up</h1>

<% if @player && @player.errors.any? %>
    <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<form method="post" action="signup">
  Username: <input type="text" name="name" placeholder="Username here"><br/>
  Password: <input type="password" name="password" placeholder="Password here"><br/>
  Password: <input type="password" name="password2" placeholder="retype password"><br/>
  <input class="button" type="submit" value="submit">
</form>
